        <link rel="icon" type="image/x-icon" href="{{asset('assets/images/logos/job.jpg')}}">
        <title>{% block title %}Job Dashboard{% endblock %}</title>

        {% block stylesheets %}
            <!-- STYLESHEETS -->
            <style type="text/css">
                [fuse-cloak],
                .fuse-cloak {
